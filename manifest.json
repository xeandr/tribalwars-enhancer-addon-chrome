{
    "manifest_version": 2,

    "name": "Xeandr's TW Enhancer",
    "description": "This extension adds extra functionality to TribalWars",
    "version": "1.0",

    "permissions": [
        "http://en64.tribalwars.net/",
        "storage"
    ],
  
    "background": {
        "persistent": true,
        "scripts": [
            "jquery-2.0.3.min.js", 
            "background.js", 
            "welcome/notifications/welcome-notifications-event.js"
        ]
    },
  
    "content_scripts": [
        {
            "matches": ["http://en64.tribalwars.net/game.php?*"],
            "js": [
                "jquery-2.0.3.min.js", 
                "game_data.js"
            ]
        },
        {
            "matches": ["http://en64.tribalwars.net/game.php?*screen=welcome*"],
            "js": ["welcome/notifications/welcome-notifications.js"]
        }
    ]
  
}